{
    "name": "motley/hopcroft-karp",
    "description": "Hopcroft-Karp algorithm",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10.3",
        "phpunit/phpunit": "^10.0",
        "motley/ecs-config": "^1.12"
    },
    "autoload": {
        "psr-4": {
            "Motley\\HopcroftKarp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Motley\\HopcroftKarp\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
