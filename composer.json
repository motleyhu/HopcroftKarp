{
    "name": "motley/hopcroft-karp",
    "description": "Hopcroft-Karp algorithm",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.3",
        "phpunit/phpunit": "^9.5",
        "symplify/easy-coding-standard": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Motley\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Motley\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
